<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_listing">

    <fragment
        android:id="@+id/navigation_listing"
        android:name="com.cs407.project.ui.listing.ListingFragment"
        android:label="@string/title_listing"
        tools:layout="@layout/fragment_listing" />

    <fragment
        android:id="@+id/navigation_posts"
        android:name="com.cs407.project.ui.posts.PostsFragment"
        android:label="@string/title_posts"
        tools:layout="@layout/fragment_posts" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.cs407.project.ui.profile.SelfProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_messages"
        android:name="com.cs407.project.ui.messages.MessageListFragment"
        android:label="Messages"
        tools:layout="@layout/fragment_message_list" />

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.cs407.project.ui.profile.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile" />

    <fragment
        android:id="@+id/editPasswordFragment"
        android:name="com.cs407.project.ui.profile.EditPasswordFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_password" />

    <fragment
        android:id="@+id/editUsernameFragment"
        android:name="com.cs407.project.ui.profile.EditUsernameFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_username" />
</navigation>